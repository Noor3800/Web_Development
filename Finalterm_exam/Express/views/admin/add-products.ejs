
<form class="admin-product-form" action="/admin/add-product" method="POST">
  <input class="admin-input" name="title" placeholder="Title" required>
  <input class="admin-input" name="price" type="number" placeholder="Price" required>
  <textarea class="admin-textarea" name="description" placeholder="Description"></textarea>
  <input class="admin-input" name="image" placeholder="Image URL">
  <button class="admin-submit-btn" type="submit">Add Product</button>
</form>

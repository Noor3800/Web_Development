            </div> -->
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Shop the Latest Trends</h1>
            <div class="buttons">
                <a href="#" class="btn">Shop Men</a>
                <a href="#" class="btn">Shop Women</a>
            </div>
        </div>
    </section>

    <!-- Category Section -->
    <section class="Category">
        <h2 class="heading">Shop By Category</h2>
        <div class="Category-grid">
            <div class="Category-box">
                <img src="/images/shirts.jpg" alt="Shirts">
                <h3>Shirts</h3>
            </div>
            <div class="Category-box">
                <img src="/images/pants.jpg" alt="Pants">
                <h3>Pants</h3>
            </div>
            <div class="Category-box">
                <img src="/images/accessories.jpg" alt="Accessories">
                <h3>Accessories</h3>
            </div>
        </div>
    </section>

    <!-- Banner Section -->
    <section class="Banner">
        <div class="Banner-content">
            <h2>New Knitwear Collection</h2>
            <a href="#" class="btn">Explore Now</a>
        </div>
    </section>

    <!-- Shirts Section -->
    <section class="shirts-section">
        <div class="category">
            <img src="/images/formal-shirt.jpg" alt="Formal Shirts">
            <h2>Formal Shirts</h2>
        </div>
        <div class="category">
            <img src="/images/casual-shirt.jpg" alt="Casual Shirts">
            <h2>Casual Shirts</h2>
        </div>
    </section>

    <!-- Image and Text Container -->
    <h2 class="heading">Discover Our Favorites</h2>
    <div class="container">
        <div class="image-text">
            <img src="/images/favorite1.jpg" alt="Fav 1">
        </div>
        <div class="image-text">
            <img src="/images/favorite2.jpg" alt="Fav 2">
        </div>
        <div class="image-text">
            <img src="/images/favorite3.jpg" alt="Fav 3">
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-column">
                <h3>Customer Service</h3>
                <ul>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">Shipping Info</a></li>
                    <li><a href="#">Returns</a></li>
                    <li><a href="#">FAQs</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Company</h3>
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Store Locator</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Follow Us</h3>
                <ul>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Subscribe to Newsletter</h3>
                <form class="newsletter-form">
                    <input type="email" placeholder="Your email">
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>
        <div class="footer-logo">
            <img src="/images/logo.png" alt="Logo">
            <p>&copy; 2025 Noor's Clothing. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
